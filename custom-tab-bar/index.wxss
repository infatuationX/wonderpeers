.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 116rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.03);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 64rpx;
  height: 64rpx;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
